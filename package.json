{
  "name": "bunplate",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "scripts": {
    "db:generate": "bun run --filter core db:generate",
    "db:push": "bun run --filter core db:push",
    "db:migrate": "bun run --filter core db:migrate",
    "db:studio": "bun run --filter core db:studio"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "core": "workspace:*"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
